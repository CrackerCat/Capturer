/*///////////////////////////////// Record Menu //////////////////////////////*/

RecordMenu QWidget#menu {
    border-radius: 5px;
}

RecordMenu QCheckBox::indicator {
    font-size: 9pt;

    height: 1.35em;
    width: 1.35em;
    padding: 0.6em;
    border-radius: 5px;
}

RecordMenu QLabel#time {
    background-color: transparent;
    font-family: "Microsoft YaHei";
    font-size: 10pt;

    padding: 0em 1em 0em 1em;
}

RecordMenu QCheckBox#stop-btn::indicator {
    image: url(:/icons/stop);
}

/*///////////////////////////////// Edit Menu //////////////////////////////*/

ImageEditMenu QCheckBox::indicator {
    font-size: 9pt;
    
    height: 1.5em;
    width: 1.5em;
    padding: 0.5em;
}

ImageEditMenu QCheckBox::indicator::checked {
    background-color: #409eff;
}

ImageEditMenu QCheckBox#rect-btn::indicator:checked {
    image: url(:/icons/rectangle);
}

ImageEditMenu QCheckBox#circle-btn::indicator:checked {
    image: url(:/icons/circle);
}

ImageEditMenu QCheckBox#arrow-btn::indicator:checked {
    image: url(:/icons/arrow);
}

ImageEditMenu QCheckBox#line-btn::indicator:checked {
    image: url(:/icons/line);
}

ImageEditMenu QCheckBox#pen-btn::indicator:checked {
    image: url(:/icons/feather);
}

ImageEditMenu QCheckBox#text-btn::indicator:checked {
    image: url(:/icons/text);
}

ImageEditMenu QCheckBox#eraser-btn::indicator:checked {
    image: url(:/icons/eraser);
}

ImageEditMenu QCheckBox#mosaic-btn::indicator:checked {
    image: url(:/icons/mosaic);
}

ImageEditMenu QCheckBox#close-btn::indicator {
    image: url(:/icons/wrong);
}

ImageEditMenu QCheckBox#ok-btn::indicator {
    image: url(:/icons/right);
}

/*///////////////////////////////// Style Menu //////////////////////////////*/
StyleMenu QComboBox {
    font-size: 9pt;
    max-width: 10em;
    min-width: 4em;
}

StyleMenu QCheckBox::indicator {
    font-size: 9pt;
}

StyleMenu QCheckBox#width-btn:checked {
    background-color: #409eff;
}

StyleMenu QCheckBox#width-btn::indicator {
    height: 1.5em;
    width: 1.5em;
    padding: 0.5em;

    image: url(:/icons/dot-2);
}

StyleMenu QCheckBox#width-btn[width="1"]::indicator:checked {
    image: url(:/icons/dot-1);
}

StyleMenu QCheckBox#width-btn[width="2"]::indicator:checked {
    image: url(:/icons/dot-2);
}

StyleMenu QCheckBox#width-btn[width="3"]::indicator:checked {
    image: url(:/icons/dot-3);
}

StyleMenu QCheckBox#width-btn[width="4"]::indicator:checked {
    image: url(:/icons/dot-4);
}

StyleMenu QCheckBox#width-btn[width="5"]::indicator:checked {
    image: url(:/icons/dot-5);
}

StyleMenu QCheckBox#width-btn[width="6"]::indicator:checked {
    image: url(:/icons/dot-6);
}

StyleMenu QCheckBox#width-btn[width="7"]::indicator:checked {
    image: url(:/icons/dot-7);
}

StyleMenu QCheckBox#width-btn[width="8"]::indicator:checked {
    image: url(:/icons/dot-8);
}

StyleMenu QCheckBox#fill-btn::indicator {
    height: 1.5em;
    width: 1.5em;
    padding: 0.5em;
}

StyleMenu QCheckBox#fill-btn::indicator:checked {
    image: url(:/icons/fill);
}

StyleMenu ColorPanel {
    font-size: 9pt;
    padding: 0.5em;
    background-color: blue;
}
