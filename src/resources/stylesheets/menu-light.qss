}

ImageEditMenu QCheckBox#arrow-btn::indicator {
    image: url(:/icons/arrow-dark);
}

ImageEditMenu QCheckBox#line-btn::indicator {
    image: url(:/icons/line-dark);
}

ImageEditMenu QCheckBox#pen-btn::indicator {
    image: url(:/icons/feather-dark);
}

ImageEditMenu QCheckBox#text-btn::indicator {
    image: url(:/icons/text-dark);
}

ImageEditMenu QCheckBox#eraser-btn::indicator {
    image: url(:/icons/eraser-dark);
}

ImageEditMenu QCheckBox#mosaic-btn::indicator {
    image: url(:/icons/mosaic-dark);
}

ImageEditMenu QCheckBox#undo-btn::indicator {
