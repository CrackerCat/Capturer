/*///////////////////////////////// Record Menu //////////////////////////////*/

RecordMenu QWidget#menu {
    background-color: #f9f9f9;
    border: 1px solid #dfdfdf;
}

RecordMenu QCheckBox::indicator::hover {
    background-color: #e6e6e6;
}

RecordMenu QCheckBox#mic-btn::indicator:unchecked {
    image: url(:/icons/microphone-dark);
}

RecordMenu QCheckBox#mic-btn::indicator:checked {
    image: url(:/icons/microphone-mute-dark);
}

RecordMenu QCheckBox#mic-btn::indicator:disabled {
    image: url(:/icons/microphone-mute-light);
}

RecordMenu QCheckBox#speaker-btn::indicator:unchecked {
    image: url(:/icons/speaker-dark);
}

RecordMenu QCheckBox#speaker-btn::indicator:checked {
    image: url(:/icons/speaker-mute-dark);
}

RecordMenu QCheckBox#speaker-btn::indicator:disabled {
    image: url(:/icons/speaker-mute-light);
}

RecordMenu QCheckBox#camera-btn::indicator:checked {
    image: url(:/icons/camera-fill-dark);
}

RecordMenu QCheckBox#camera-btn::indicator:unchecked {
    image: url(:/icons/camera-dark);
}

RecordMenu QCheckBox#camera-btn::indicator:disabled {
    image: url(:/icons/camera-light);
}

RecordMenu QLabel#time {
    color: #2c2c2c;
}

RecordMenu QCheckBox#pause-btn::indicator:unchecked {
    image: url(:/icons/pause-dark);
}

RecordMenu QCheckBox#pause-btn::indicator:checked {
    image: url(:/icons/play-dark);
}

/*///////////////////////////////// Edit Menu //////////////////////////////*/

EditMenu {
